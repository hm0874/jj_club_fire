<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.promotion.CollegeFilterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="42dp"
            android:text="필터"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/promotionWrite2_filter_check_btn"
            android:layout_width="80dp"
            android:layout_height="49dp"
            android:layout_marginLeft="318dp"
            android:layout_marginTop="38dp"
            android:text="완료"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="168dp"
            android:text="단과대"
            android:textSize="23sp"
            android:textStyle="bold" />

        <android.widget.Button
            android:id="@+id/medical_college_button"
            android:layout_width="94dp"
            android:layout_height="45dp"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="228dp"
            android:background="@drawable/shadow"
            android:text="의과대"
            android:textSize="17dp" />

        <android.widget.Button
            android:id="@+id/liberal_arts_button"
            android:layout_width="94dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="228dp"
            android:layout_toRightOf="@id/medical_college_button"
            android:background="@drawable/shadow"
            android:text="사과대"
            android:textSize="17dp" />

        <android.widget.Button
            android:id="@+id/engineering_college_button"
            android:layout_width="94dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="228dp"
            android:layout_toRightOf="@id/liberal_arts_button"
            android:background="@drawable/shadow"
            android:text="공과대"
            android:textSize="17dp" />


        <!-- '인문대' button below '의과대' button -->
        <android.widget.Button
            android:id="@+id/humanities_college_button"
            android:layout_width="94dp"
            android:layout_height="45dp"
            android:layout_below="@id/medical_college_button"
            android:layout_alignStart="@id/medical_college_button"
            android:layout_marginTop="20dp"
            android:background="@drawable/shadow"
            android:text="인문대"
            android:textSize="17dp" />

        <!-- '경영대' button to the right of '인문대' button -->
        <android.widget.Button
            android:id="@+id/business_college_button"
            android:layout_width="94dp"
            android:layout_height="45dp"
            android:layout_alignTop="@id/humanities_college_button"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/humanities_college_button"
            android:background="@drawable/shadow"
            android:text="경영대"
            android:textSize="17dp" />

        <!-- '사범대' button to the right of '경영대' button -->
        <android.widget.Button
            android:id="@+id/education_college_button"
            android:layout_width="94dp"
            android:layout_height="45dp"
            android:layout_alignTop="@id/business_college_button"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/business_college_button"
            android:background="@drawable/shadow"
            android:text="사범대"
            android:textSize="17dp" />

        <!-- '문화융합대' button below '인문대' button -->
        <android.widget.Button
            android:id="@+id/culture_convergence_college_button"
            android:layout_width="94dp"
            android:layout_height="45dp"
            android:layout_below="@id/humanities_college_button"
            android:layout_alignStart="@id/humanities_college_button"
            android:layout_marginTop="20dp"
            android:background="@drawable/shadow"
            android:text="문화융합대"
            android:textSize="17dp" />

        <!-- '문화관광대' button to the right of '문화융합대' button -->
        <android.widget.Button
            android:id="@+id/culture_tourism_college_button"
